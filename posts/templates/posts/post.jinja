<div class="post"> 
    <a href="{{ url('post_detail', pk=post.pk) }}" class="permalink pull-right"><span class="glyphicon glyphicon-link"></span></a>
    <h3>{{ post.parent_as_title()|safe }}</h3>
    <img class="img-responsive" src="{{post.comment_img_src() }}" />
    <div class="post-info">
        on <a href="{{ post.get_context_url() }}">{{ post.submission.get('title') }}</a>
    </div>
</div>
